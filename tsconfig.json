{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strictNullChecks": true,
        "outDir": "./dist",
        "rootDir": "./toolkit",
        "declaration": true
    },
    "include": [
        "./toolkit/**/*.ts"
    ],
    "exclude": [
        "**/ts/*.ts"
    ]
}